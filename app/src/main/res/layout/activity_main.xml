<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/inc_header"
        layout="@layout/inc_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        android:visibility="visible"></include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_main_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_main_agrebot"
        android:layout_below="@+id/inc_header"></androidx.recyclerview.widget.RecyclerView>


    <Button
        android:id="@+id/btn_main_agrebot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGreen"
        android:text="Raitha Mitra (Agribot)"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/button_size_medium"
        android:visibility="visible" />
</RelativeLayout>