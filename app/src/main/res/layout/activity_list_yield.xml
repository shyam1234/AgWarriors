<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/inc_header"
        layout="@layout/inc_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        android:visibility="visible"></include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_list_yield_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_list_yield"
        android:layout_below="@+id/inc_header"
        android:padding="@dimen/commom_padding">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/button_list_yield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="New Register Yield"
        android:textSize="@dimen/button_size_medium"
        android:textStyle="bold" />

</RelativeLayout>